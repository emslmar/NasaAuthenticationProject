@model List<User>
@{
    ViewData["Title"] = "Index";
}

<h1>Users List</h1>



<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                Created Time
            </th>
            <th>
                Role
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Email
                </td>
                <td width="30%">
                    @obj.Password
                </td>
                <td width="30%">
                    @obj.CreatedDateTime
                </td>
                <td width="10%">
                    @obj.Type
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <a asp-controller="User" asp-action="ExportToExcel" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Export to Excel
            </a>
        </div>

    </div>
</div>